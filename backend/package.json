{
  "name": "guelaguetza-connect-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker-compose -f docker-compose.test.yml down",
    "test:db:reset": "npx dotenv-cli -e .env.test -- tsx scripts/reset-test-db.ts",
    "test:integration": "npx dotenv-cli -e .env.test -- vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "npx dotenv-cli -e .env.test -- vitest --config vitest.config.integration.ts",
    "test:integration:coverage": "npx dotenv-cli -e .env.test -- vitest run --config vitest.config.integration.ts --coverage",
    "test:integration:booking": "npx dotenv-cli -e .env.test -- vitest run --config vitest.config.integration.ts test/integration/booking.service.test.ts",
    "test:integration:marketplace": "npx dotenv-cli -e .env.test -- vitest run --config vitest.config.integration.ts test/integration/marketplace.service.test.ts",
    "test:integration:auth": "npx dotenv-cli -e .env.test -- vitest run --config vitest.config.integration.ts test/integration/auth.service.test.ts",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:badges": "tsx scripts/seed-badges.ts",
    "db:studio": "prisma studio",
    "sync:payments": "tsx scripts/sync-payments.ts",
    "check:eventbus": "tsx scripts/check-eventbus.ts",
    "jobs:verify": "tsx scripts/verify-jobs.ts",
    "jobs:run": "tsx src/jobs/cleanup-payments.job.ts",
    "monitoring:up": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:down": "docker-compose -f docker-compose.monitoring.yml down",
    "monitoring:logs": "docker-compose -f docker-compose.monitoring.yml logs -f",
    "docker:migrate": "docker-compose exec backend npx prisma migrate deploy",
    "docker:seed": "docker-compose exec backend npm run db:seed",
    "docker:studio": "docker-compose exec backend npx prisma studio",
    "docker:shell": "docker-compose exec backend sh",
    "docker:psql": "docker-compose exec postgres psql -U postgres -d guelaguetza_db",
    "docker:redis-cli": "docker-compose exec redis redis-cli",
    "migrate:images:dry": "tsx scripts/migrate-images.ts all --dry-run",
    "migrate:images:products": "tsx scripts/migrate-images.ts products",
    "migrate:images:events": "tsx scripts/migrate-images.ts events",
    "migrate:images": "tsx scripts/migrate-images.ts all"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@fastify/compress": "^8.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^9.0.1",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.0.1",
    "@google/genai": "^1.34.0",
    "@prisma/client": "^6.2.1",
    "@sentry/node": "^10.38.0",
    "@types/ioredis": "^4.28.10",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "fastify-raw-body": "^5.0.0",
    "fastify-type-provider-zod": "^4.0.2",
    "ioredis": "^5.9.2",
    "jose": "^6.1.3",
    "node-cron": "^4.2.1",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.0",
    "resend": "^6.9.1",
    "sharp": "^0.34.5",
    "stripe": "^20.3.1",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "zod": "^3.24.1",
    "prisma": "^6.2.1",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "dotenv-cli": "^8.0.0",
    "supertest": "^7.2.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  }
}
